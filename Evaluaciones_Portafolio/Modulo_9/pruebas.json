{
  "info": {
    "name": "API Demo Biblioteca",
    "_postman_id": "123e4567-e89b-12d3-a456-426614174000",
    "description": "Colección para pruebas del backend de demo biblioteca.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "usuarioId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Registrar Usuario - positivo",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/usuarios/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"correo\": \"usuario1@example.com\",\n  \"contraseña\": \"password123\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Registrar Usuario - error: falta campos",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/usuarios/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"correo\": \"\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Login Usuario - positivo",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/usuarios/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"correo\": \"usuario1@example.com\",\n  \"contraseña\": \"password123\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Login Usuario - error: credenciales inválidas",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/usuarios/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"correo\": \"usuario1@example.com\",\n  \"contraseña\": \"wrongpass\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Mostrar catálogo privado - autorizado",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": "{{baseUrl}}/usuarios/{{usuarioId}}/libros"
      },
      "response": []
    },
    {
      "name": "Buscar libros - positivo",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/usuarios/{{usuarioId}}/libros/buscar?search=Asimov",
          "host": ["{{baseUrl}}"],
          "path": ["usuarios", "{{usuarioId}}", "libros", "buscar"],
          "query": [{ "key": "search", "value": "Asimov" }]
        }
      },
      "response": []
    },
    {
      "name": "Buscar libros - error: campo vacío",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/usuarios/{{usuarioId}}/libros/buscar?search=",
          "host": ["{{baseUrl}}"],
          "path": ["usuarios", "{{usuarioId}}", "libros", "buscar"],
          "query": [{ "key": "search", "value": "" }]
        }
      },
      "response": []
    },
    {
      "name": "Comprar libros - positivo",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/usuarios/{{usuarioId}}/libros/compras",
        "body": {
          "mode": "raw",
          "raw": "[\n  { \"id\": 1, \"titulo\": \"Dune\", \"cantidad\": 2 },\n  { \"id\": 2, \"titulo\": \"Fundación\", \"cantidad\": 1 }\n]"
        }
      },
      "response": []
    },
    {
      "name": "Comprar libros - error: cantidad negativa",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/usuarios/{{usuarioId}}/libros/compras",
        "body": {
          "mode": "raw",
          "raw": "[\n  { \"id\": 1, \"titulo\": \"Dune\", \"cantidad\": -5 }\n]"
        }
      },
      "response": []
    },
    {
      "name": "Comprar libros - error: libro no existe",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/usuarios/{{usuarioId}}/libros/compras",
        "body": {
          "mode": "raw",
          "raw": "[\n  { \"id\": 9999, \"titulo\": \"Libro Inexistente\", \"cantidad\": 1 }\n]"
        }
      },
      "response": []
    },
    {
      "name": "Refrescar sesión",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{refreshToken}}" }
        ],
        "url": "{{baseUrl}}/usuarios/{{usuarioId}}/refresh"
      },
      "response": []
    },
    {
      "name": "Crear biblioteca (reset y carga 100 libros)",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/libros"
      },
      "response": []
    }
  ]
}
